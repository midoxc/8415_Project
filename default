# default nginx server file, will overwrite the file created by default by nginx.
# on start, nginx will redirect every call to the public http route of the ec2 to localhost:8000, where the proxy app is served.

upstream proxy {
    server 127.0.0.1:8000;
}

# Default server configuration
server {
        listen 80 default_server;
        listen [::]:80 default_server;

        root /var/www/html;

        index index.html index.htm index.nginx-debian.html;

        server_name _;

        location / {
	        proxy_pass http://proxy;
        }
}
